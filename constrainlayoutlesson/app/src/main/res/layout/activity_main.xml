<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.developer.agungaprian.constrainlayoutlesson.MainActivity">

    <TextView
        android:id="@+id/title_team_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEAM A"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

    <TextView
        android:id="@+id/title_team_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="TEAM B"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

    <TextView
        android:id="@+id/score_team_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textSize="64sp"
        app:layout_constraintTop_toBottomOf="@+id/title_team_a"
        app:layout_constraintLeft_toLeftOf="@+id/title_team_a"
        app:layout_constraintRight_toRightOf="@+id/title_team_a"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/score_team_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textSize="64sp"
        app:layout_constraintTop_toBottomOf="@+id/title_team_b"
        app:layout_constraintLeft_toLeftOf="@+id/title_team_b"
        app:layout_constraintRight_toRightOf="@+id/title_team_b"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/plus_3_team_a"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="+3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintVertical_bias="0.4" />

    <Button
        android:id="@+id/plus_2_team_a"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="+2"
        app:layout_constraintTop_toBottomOf="@+id/plus_3_team_a"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline2" />


    <Button
        android:id="@+id/plus_1_team_a"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="free throw"
        app:layout_constraintTop_toBottomOf="@+id/plus_2_team_a"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline2" />


    <Button
        android:id="@+id/plus_3_team_b"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="+3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintVertical_bias="0.4" />

    <Button
        android:id="@+id/plus_2_team_b"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="+2"
        app:layout_constraintTop_toBottomOf="@+id/plus_3_team_b"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2" />


    <Button
        android:id="@+id/plus_1_team_b"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="free throw"
        app:layout_constraintTop_toBottomOf="@+id/plus_2_team_b"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2" />

    <Button
        android:id="@+id/reset_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="reset"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="192dp" />


</android.support.constraint.ConstraintLayout>
